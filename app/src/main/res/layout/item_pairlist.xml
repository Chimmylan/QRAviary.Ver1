<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/new_appbar_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvidpairs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_weight="1"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="right"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/maleImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bird"
        android:contentDescription="Bird Image"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/gendermaleImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Bird Image"
            android:scaleType="fitCenter"
            android:src="@drawable/male_icon" />

        <TextView
        android:id="@+id/tvmaleid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvMaleMutation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutation" />
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/femaleImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bird"
                android:contentDescription="Bird Image"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/genderfemaleImageView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/female_icon"
                    android:contentDescription="Bird Image"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/tvfemaleid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:padding="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvFemaleMutation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mutation" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>