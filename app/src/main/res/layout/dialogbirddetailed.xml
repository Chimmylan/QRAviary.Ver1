<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Id"
            android:layout_marginBottom="1dp" />
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Legband"
            android:layout_marginBottom="1dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/incubation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="1"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/matured"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white_black"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvdatebirth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btndatebirth"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pick Date"
                app:iconTint="@color/black"
                android:layout_margin="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                app:icon="@drawable/drop_down"
                app:iconGravity="end"
                android:onClick="openDatebirthPicker"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvSoldDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Sold Date"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDeceaseDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Deceased Date"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvExchangeDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Exchanged Date"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvLostDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Lost Date"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDonatedDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Donated Date"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvSalePrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Sale Price"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvBuyer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Buyer // contacts sale"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDeathReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Death Reason // optional"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvExchangeReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Exchange Reason //optional"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvExchangeWith"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Exchange With //contacts"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDonatedContact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Donated Contact //contacts"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvLostDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Lost Details // optional"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvRequestedPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/black_white"
                android:text="Requested Price // forsale"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvAvailCage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Cage //forsale and avail"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:text="Comment// Other"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvbuyPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="@color/black_white"
                android:text="Buy Price"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvdateBought"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="Bought On"
                android:textColor="@color/black_white"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvbreederBought"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="Bought to breeder"
                android:textColor="@color/black_white"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvbreeder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="Breeder"
                android:textColor="@color/black_white"
                android:padding="5dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>
