<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="5dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/birdImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/eggclutches"
                    android:contentDescription="Bird Image"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/tvnursery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moved in Nursery"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvIncubating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Incubating"
                android:visibility="gone"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvLaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Laid"
                android:visibility="gone"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvHatched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Hatched"
                android:visibility="gone"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvBroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Broken"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvNotFertilized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Not Fertilized"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvAbandon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Broken"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvDeadInShell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Dead In Shell"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvDeadBeforeRinging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Dead Before Ringing"
                android:textSize="15sp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
