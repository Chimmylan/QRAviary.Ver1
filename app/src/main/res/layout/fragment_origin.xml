<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_nav_background"
    android:orientation="vertical"
    tools:context=".fragments.AddFragment.OriginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Note: this bird cannot be modified because this is descended from a pairing"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvfather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Father "
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFather"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textAlignment="textStart"
                    android:textColor="@color/black_white"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black_white" />

                <TextView
                    android:id="@+id/tvmother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mother "
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMother"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="None"
                    android:textAlignment="textStart"
                    android:textColor="@color/black_white"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black_white" />

                <TextView
                    android:id="@+id/tvprovenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provenance "
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupprovenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radioButtonMe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Me" />

                    <RadioButton
                        android:id="@+id/radioButtonBought"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bought" />

                    <RadioButton
                        android:id="@+id/radioButtonOther"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Other" />

                </RadioGroup>


                <LinearLayout
                    android:id="@+id/boughtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bought Date (*)"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/boughtDate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Today"
                            android:textAlignment="textStart"
                            android:textColor="@color/black_white"
                            android:textColorHint="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"
                            app:iconTint="@color/black_white" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy Price (*)"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBuyPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.5"
                        android:hint="0.00"
                        android:inputType="number"
                        android:textColor="@color/black_white"
                        android:textColorHint="@color/black_white" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Breeder Contact"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBreederContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_white"
                        app:iconGravity="end" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/otLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Breeder Contact"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otherContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/soldBuyer"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_white"
                        app:iconGravity="end" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
