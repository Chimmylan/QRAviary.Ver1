<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bottom_nav_background"
    tools:context=".fragments.DetailedFragment.BirdOriginFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layouttvnofound"
        android:layout_gravity="center"
        
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:text="No relation Found"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:padding="2dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
<LinearLayout
    android:id="@+id/ParentLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation ="vertical">
    <TextView
        android:id="@+id/tvParents"
        android:padding="10dp"

        android:background="@color/totals"
        android:layout_width="match_parent"
        android:textColor="@color/white_black"
        android:layout_height="wrap_content"
        android:text = "Parents" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical">

            <LinearLayout
                android:id="@+id/fatherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation = "vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/birdFatherImageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/noimage"
                            android:contentDescription="Bird Image"
                            android:scaleType="centerCrop"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvFatherIdentifier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID"
                                android:textColor="@color/black_white"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tvFatherLegband"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Legband "
                                android:textColor="@color/black_white"
                                android:textSize="11sp"/>
                            <TextView
                                android:id="@+id/tvFatherMutation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mutation"
                                android:textColor="@color/black_white"
                                android:textSize="11sp"/>

                            <TextView
                                android:id="@+id/tvFatherCage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cage Number"
                                android:textColor="@color/black_white"
                                android:textSize="11sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView

                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_male_24"
                                android:contentDescription="Bird Image"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/tvFatherGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textColor="@color/black_white"
                                android:textSize="10sp"
                                android:padding="2dp"/>
                            <TextView
                                android:id="@+id/tvFatherStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="STATUS"
                                android:textColor="@color/black_white"
                                android:textSize="10sp"
                                android:padding="2dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/motherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation = "vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/birdMotherImageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/noimage"
                            android:contentDescription="Bird Image"
                            android:scaleType="centerCrop"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvMotherIdentifier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID"
                                android:textColor="@color/black_white"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tvMotherLegband"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Legband "
                                android:textColor="@color/black_white"
                                android:textSize="11sp"/>
                            <TextView
                                android:id="@+id/tvMotherMutation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mutation"
                                android:textColor="@color/black_white"
                                android:textSize="11sp"/>

                            <TextView
                                android:id="@+id/tvMotherCage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cage Number"
                                android:textColor="@color/black_white"
                                android:textSize="11sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/female_logo"
                                android:contentDescription="Bird Image"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/tvMotherGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:textColor="@color/black_white"
                                android:textSize="10sp"
                                android:padding="2dp"/>
                            <TextView
                                android:id="@+id/tvMotherStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="STATUS"
                                android:textColor="@color/black_white"
                                android:textSize="10sp"
                                android:padding="2dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSiblings"
            android:visibility="gone"

            android:padding="10dp"
            android:textColor="@color/white_black"
            android:background="@color/totals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Siblings" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled ="false"/>


    </LinearLayout>


</LinearLayout>
</androidx.core.widget.NestedScrollView>