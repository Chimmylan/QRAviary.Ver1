<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailedFragment.BirdOriginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:id="@+id/ParentLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation ="vertical">
    <TextView
        android:id="@+id/tvParents"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Parents" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical">

            <LinearLayout
                android:id="@+id/fatherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation = "vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bottom_nav_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/birdFatherImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Bird Image"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/noimage" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvFatherIdentifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvFatherLegband"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Legband "
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvFatherMutation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mutation"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvFatherCage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cage Number"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/GenderImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="Bird Image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_male_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:padding="2dp"
                        android:text="MALE" />

                    <TextView
                        android:id="@+id/tvFatherStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="STATUS" />
                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/motherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation = "vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bottom_nav_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/birdMotherImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:src="@drawable/noimage"
                    android:contentDescription="Bird Image"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvMotherIdentifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tvMotherLegband"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Legband "
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/tvMotherMutation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mutation"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tvMotherCage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cage Number"
                        android:textSize="10sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/GenderFatherImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/female_logo"
                        android:contentDescription="Bird Image"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:padding="2dp"
                        android:text="FEMALE" />
                    <TextView
                        android:id="@+id/tvMotherStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:padding="2dp"/>
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSiblings"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Siblings" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled ="false"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>