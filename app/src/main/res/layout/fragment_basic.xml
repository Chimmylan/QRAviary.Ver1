<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.AddFragment.BasicFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvidentifier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Identifier (*)"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:paddingLeft="16dp" />
                    <TextView
                        android:id="@+id/tvLegband"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Legband"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:paddingLeft="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutIdentifier"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#5A0808"
                        app:hintTextColor="#000000"
                        app:startIconTint="#1E1D1D"> <!-- Set visibility to "GONE" when needed -->

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etIdentifier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutlegband"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#5A0808"
                        app:hintTextColor="#000000"
                        app:startIconTint="#1E1D1D"> <!-- Set visibility to "GONE" when needed -->

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLegband"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvsex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sex (*) "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingLeft="16dp" />

                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/radioButtonUnknown"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Unknown" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                <TextView
                    android:id="@+id/tvmutation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Mutation (*) "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingLeft="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="add +"
                        android:textColor="@color/black_white"
                        android:backgroundTint="@color/new_appbar_color"
                        android:textAlignment="center"

                        app:iconGravity="textEnd" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/removeBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="Del -"
                        android:textColor="@color/black_white"
                        android:backgroundTint="@color/new_appbar_color"
                        android:textAlignment="center"
                        app:iconGravity="textEnd" />

                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <GridLayout
                        android:id="@+id/spinnerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:rowCount="3"
                        android:padding="10dp">
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:id="@+id/mutationBtn1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_val"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            android:text="None"
                            android:textColor="#000000"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_val"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            android:text="None"
                            android:textColor="#000000"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn3"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_val"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            android:text="None"
                            android:textColor="#000000"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn4"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_val"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            android:text="None"
                            android:textColor="#000000"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn5"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_val"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            android:text="None"
                            android:textColor="#000000"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn6"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_val"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            android:text="None"
                            android:textColor="#000000"/>

                    </GridLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvdatebanding"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date of banding (*)"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingLeft="16dp" />

                    <TextView
                        android:id="@+id/tvdatebirth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date of birth"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingLeft="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btndateband"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pick Date"
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        style="?android:spinnerStyle"
                        android:onClick="openDatebandPicker"/>
                    <Button
                        android:id="@+id/btndatebirth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pick Date"
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        style="?android:spinnerStyle"
                        android:onClick="openDatebirthPicker"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status (*) "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingLeft="16dp" />



                    <Spinner
                        android:id="@+id/spinnerstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:minHeight="48dp" />

                <LinearLayout
                    android:id="@+id/editTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/availableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAvailCage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cage"
                            android:editable="false"
                            />

                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/forSaleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etForSaleCage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"

                            android:hint="Cage"
                            android:editable="false"
                            />
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etForSaleReqPrice"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:hint="RequestedPrice"
                            />

                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/soldLayout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:weightSum="1">

                            <Button
                                android:id="@+id/soldSaleDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Pick Date"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                style="?android:spinnerStyle"
                                android:onClick="openSoldDatePicker"
                                />
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/soldSalePrice"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:hint="Sale Price"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSaleContact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Choose Contact"
                                android:textAlignment="textStart"
                                app:iconGravity="end"
                                />
                        </LinearLayout>


                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->

                    <LinearLayout
                        android:id="@+id/deceasedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deathDate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Death Date"
                            android:onClick="openDeathDatePicker"
                            android:textAlignment="textStart"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"
                            />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Death Reason"
                            />




                    </LinearLayout>
                    <!--                   +++++++=========================++++++++++++++++++++++++++ -->

                    <LinearLayout
                        android:id="@+id/exchangeLayout"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <Button
                                android:id="@+id/exDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                style="?android:spinnerStyle"
                                android:hint="Pick date"
                                android:onClick="openExchangeDatePicker"
                                />
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/exReason"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:hint="Exchange Reason"
                                />

                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/exchangeWithBtn"
                                android:layout_toEndOf="@+id/soldBuyer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Choose Contact"
                                android:textAlignment="textStart"
                                app:iconGravity="end"
                                />
                        </LinearLayout>


                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/lostLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/lostDateBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Lost Date"
                            android:textAlignment="textStart"
                            app:icon="@drawable/drop_down"
                            android:onClick="openLostDatePicker"
                            app:iconGravity="end"
                            />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLostDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Lost Details"/>




                    </LinearLayout>

                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/donatedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >

                        <Button
                            android:id="@+id/btnDonatedDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDonatedDatePicker"
                            android:text="Pick Date"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            style="?android:spinnerStyle"
                            />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDonateChooseContact"
                            android:layout_toEndOf="@+id/soldBuyer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Choose Contact"
                            android:textAlignment="textStart"
                            app:iconGravity="end"
                            />

                    </LinearLayout>

                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/otherLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOthersComm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Comments"
                            android:textAlignment="textStart"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"
                            />



                    </LinearLayout>




                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
