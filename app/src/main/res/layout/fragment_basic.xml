<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_nav_background"
    android:fillViewport="true"

    android:orientation="vertical"
    tools:context=".fragments.AddFragment.BasicFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_black"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvidentifier"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Identifier (*)"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLegband"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Legband"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--                    <com.google.android.material.textfield.TextInputLayout-->
                    <!--                        android:id="@+id/layoutIdentifier"-->
                    <!--                        android:layout_width="0dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:paddingLeft="10dp"-->
                    <!--                        android:paddingRight="10dp"-->
                    <!--                        app:endIconMode="clear_text"-->
                    <!--                        app:startIconTint="#1E1D1D"> -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIdentifier"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLines="1" />
                    <!--                    </com.google.android.material.textfield.TextInputLayout>-->

                    <!--                    <com.google.android.material.textfield.TextInputLayout-->
                    <!--                        android:id="@+id/layoutlegband"-->
                    <!--                        android:layout_width="0dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:paddingLeft="10dp"-->
                    <!--                        android:paddingRight="10dp"-->

                    <!--                        app:endIconMode="clear_text"-->
                    <!--                      -->
                    <!--                        app:startIconTint="#1E1D1D"> &lt;!&ndash; Set visibility to "GONE" when needed &ndash;&gt;-->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLegband"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLines="1" />
                    <!--                    </com.google.android.material.textfield.TextInputLayout>-->
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Note: sex cannot be modified because this bird has childs or has been paired"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white_black"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvsex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Sex (*) "
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/radioButtonUnknown"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Unknown" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/tvmutation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Mutation (*) "
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/itemimagebg"
                        android:text="add +"
                        android:textAlignment="center"
                        android:textColor="@color/black_white"
                        android:textSize="10sp"

                        app:iconGravity="textEnd" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/removeBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/itemimagebg"
                        android:text="Del -"
                        android:textAlignment="center"
                        android:textColor="@color/black_white"
                        android:textSize="10sp"
                        app:iconGravity="textEnd" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <GridLayout
                        android:id="@+id/spinnerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn1"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="None"
                            android:textColor="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:id="@+id/slash1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="/"
                            android:textSize="25sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:id="@+id/slash2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="/"
                            android:textSize="25sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn3"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="@color/black_white"
                            app:icon="@drawable/drop_down"

                            app:iconGravity="textEnd"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:id="@+id/slash3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="/"
                            android:textSize="25sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn4"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:id="@+id/slash4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="/"
                            android:textSize="25sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn5"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:id="@+id/slash5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="/"
                            android:textSize="25sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mutationBtn6"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black_white" />

                    </GridLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvdatebirth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Date of birth (*)"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Age in days"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btndatebirth"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:hint="Pick Date"
                        android:onClick="openDatebirthPicker"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_white"
                        android:textColorHint="@color/black_white"
                        android:textSize="12sp"
                        app:icon="@drawable/drop_down"
                        app:iconGravity="end"
                        app:iconTint="@color/black_white" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:hint="0"
                        android:textColorHint="@color/black_white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_black"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Status (*) "
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black_white"
                    android:minHeight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_black"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/editTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/availableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Cage"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/etAvailCage"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Choose Cage"
                                android:minHeight="48dp"
                                android:textAlignment="textStart"
                                android:textColor="@color/black_white"
                                android:textColorHint="@color/black_white"
                                app:icon="@drawable/drop_down"
                                app:iconGravity="end"
                                app:iconTint="@color/black_white" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cagescan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="5"
                                android:backgroundTint="@color/itemimagebg"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackground"
                                android:gravity="center"
                                app:iconSize="30dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/scanner"
                                    app:tint="@color/black_white" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/forSaleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cage"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/etForSaleCage"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Choose Cage"
                                android:minHeight="48dp"
                                app:icon="@drawable/drop_down"
                                app:iconGravity="end"
                                app:iconTint="@color/black_white" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cagescan1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="5"
                                android:backgroundTint="@color/itemimagebg"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackground"
                                android:gravity="center"
                                app:iconSize="30dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/scanner"
                                    app:tint="@color/black_white" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Requested Price"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etForSaleReqPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" />

                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/soldLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sold Date"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sale Price"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:weightSum="1">

                            <Button
                                android:id="@+id/soldSaleDate"
                                style="?android:spinnerStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:hint="Today"
                                android:onClick="openSoldDatePicker"
                                android:textColor="@color/black_white"
                                android:textColorHint="@color/black_white"
                                android:textSize="15sp"
                                app:iconTint="@color/black_white" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/soldSalePrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:hint="0.00"
                                android:maxLines="1"
                                android:padding="15dp"
                                android:textColorHint="@color/black_white" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Add Contact "
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSaleContact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textAlignment="textStart"
                                app:iconGravity="end" />
                        </LinearLayout>


                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->

                    <LinearLayout
                        android:id="@+id/deceasedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Death Date"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deathDate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pick Date"
                            android:onClick="openDeathDatePicker"
                            android:textAlignment="textStart"
                            android:textColor = "@color/black_white"
                            android:textColorHint="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Death Reason"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:maxLines="1" />


                    </LinearLayout>
                    <!--                   +++++++=========================++++++++++++++++++++++++++ -->

                    <LinearLayout
                        android:id="@+id/exchangeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Exchange Date"

                            android:textSize="13sp"
                            android:textStyle="bold" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/exDate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="Pick date"
                            android:onClick="openExchangeDatePicker"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"
                            app:iconTint="@color/black_white" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Exchange Reason"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/exReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:maxLines="1"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Exchange Contact"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/exchangeWithBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/soldBuyer"
                            android:layout_weight="0.5"
                            android:maxLines="1"
                            android:textAlignment="textStart"
                            app:iconGravity="end" />


                    </LinearLayout>
                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/lostLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lost Date"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/lostDateBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pick Date"

                            android:onClick="openLostDatePicker"
                            android:textAlignment="textStart"
                            android:textColorHint="@color/black_white"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"
                            app:iconTint="@color/black_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lost Details"

                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLostDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" />


                    </LinearLayout>

                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/donatedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donated Date"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDonatedDate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pick Date"
                            android:onClick="openDonatedDatePicker"
                            android:textAlignment="textStart"
                            android:textColor="@color/black_white"
                            android:textColorHint="@color/black_white"
                            android:textSize="12sp"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end"

                            app:iconTint="@color/black_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donated Contact"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDonateChooseContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/soldBuyer"
                            android:maxLines="1"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <!-- +++++++=========================++++++++++++++++++++++++++ -->
                    <LinearLayout
                        android:id="@+id/otherLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOthersComm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textAlignment="textStart"
                            app:icon="@drawable/drop_down"
                            app:iconGravity="end" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
