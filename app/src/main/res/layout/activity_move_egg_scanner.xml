<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".activities.detailedactivities.MoveEggScannerActivity">

        <!-- Top Toolbar -->


        <!-- CodeScannerView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <com.budiyev.android.codescanner.CodeScannerView
                    android:id="@+id/scanner_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:frameVisible="true"
                    app:frameVerticalBias=".2"
                    tools:ignore="MissingClass" >

                </com.budiyev.android.codescanner.CodeScannerView>

                <!-- Text View to be displayed above the scanner view -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="30dp"
                    android:text="Make sure the QR code is within the frame"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:padding="10dp" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>
