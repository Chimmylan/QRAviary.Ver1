<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bottom_nav_background">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logoqraviary" />

            <TextView
                android:id="@+id/toolbar_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Reader"
                android:layout_gravity="center"
                android:textColor="@color/appbar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&#8942;"
                android:layout_gravity="right"
                android:paddingRight="25dp"
                android:textColor="@color/appbar"
                android:textSize="35sp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CodeScannerView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <com.budiyev.android.codescanner.CodeScannerView
                android:id="@+id/scanner_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:frameVisible="true"
                app:frameVerticalBias=".2"
                tools:ignore="MissingClass" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/GenerateQR"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/bottom_nav_background"
                        android:text="Generate QR"
                        android:textColor="@color/appbar"
                        android:textSize="10sp"
                        app:iconTint="@color/black_white"
                        app:icon="@drawable/qr"
                        app:iconGravity="start"
                        app:iconSize="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/UploadQR"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="Upload QR Code"
                        android:backgroundTint="@color/bottom_nav_background"
                        android:textColor="@color/appbar"
                        android:textSize="10sp"
                        app:iconTint="@color/black_white"
                        app:icon="@drawable/upload"
                        app:iconGravity="start"
                        app:iconSize="24dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/AddManually"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add Manually"
                        android:textColor="@color/appbar"
                        android:textSize="15sp"
                        android:backgroundTint="@color/bottom_nav_background"
                        app:iconTint="@color/black_white"
                        app:icon="@drawable/more"
                        app:iconGravity="start"
                        app:iconSize="24dp"/>

                </LinearLayout>
            </LinearLayout>
        </com.budiyev.android.codescanner.CodeScannerView>

            <!-- Text View to be displayed above the scanner view -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="30dp"
                android:text="Make sure the QR code is within the frame"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="10dp" />

        </FrameLayout>


    </LinearLayout>

</LinearLayout>
