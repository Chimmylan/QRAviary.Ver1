<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/new_appbar_color"
tools:context=".activities.detailedactivities.BirdFilterActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white_black"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identifier"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="8">

                <EditText
                    android:id="@+id/etIdentifier"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white_black"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Mutations"
                    android:gravity="center|left"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="@color/black_white"
                    android:backgroundTint="@color/bottom_nav_background"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="@color/black_white"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:backgroundTint="@color/bottom_nav_background"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mutationslayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="8">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnmutation1"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mutationslayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility ="gone"
                android:weightSum="8">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnmutation2"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mutationslayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility ="gone"
                android:weightSum="8">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnmutation3"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mutationslayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility ="gone"
                android:weightSum="8">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnmutation4"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mutationslayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility ="gone"
                android:weightSum="8">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnmutation5"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mutationslayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility ="gone"
                android:weightSum="8">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnmutation6"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white_black"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sales date"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnbeginningdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:minHeight="48dp"
                    android:textSize="10sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="From"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnseperatedate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:minHeight="48dp"
                    android:textSize="10sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="To"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"

                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white_black"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buyer"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnnurserycage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:minHeight="48dp"
                    android:textSize="10sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/drop_down"
                    app:iconGravity="end"
                    app:iconTint="@color/black"
                    android:text="Choose One"
                    android:textColor="@color/black" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white_black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sex"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Male"
                        android:checked="true"
                        android:textSize="15sp"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Female"
                        android:checked="true"
                        android:textSize="15sp"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Unknown"
                        android:checked="true"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>