<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/birdImageView"
            android:layout_width="100dp"
            android:layout_height="match_parent"

            android:background="@color/itemimagebg"
            android:src="@drawable/noimage"
            android:contentDescription="Bird Image"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvIdentifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@color/black_white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvLegband"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legband "
                android:textColor="@color/black_white"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/tvMutation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mutation"
                android:textColor="@color/black_white"
                android:textSize="11sp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/GenderImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bird"
                android:contentDescription="Bird Image"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER"
                android:textColor="@color/black_white"
                android:textSize="10sp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textColor="@color/black_white"
                android:textSize="13sp"
                android:padding="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/deletelayout"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight=".2"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/options"

                android:layout_width="match_parent"
                app:tint="@color/black_white"
                android:clickable="true"
                android:layout_height="30dp"
                android:src="@drawable/bin"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
