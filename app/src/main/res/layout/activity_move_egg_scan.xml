<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".activities.detailedactivities.MoveEggScanActivity">

        <!-- Top Toolbar -->


        <!-- CodeScannerView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <com.budiyev.android.codescanner.CodeScannerView
                    android:id="@+id/scanner_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:frameVisible="true"
                    app:frameVerticalBias=".2"
                    tools:ignore="MissingClass" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/bottom_nav_background"
                            android:orientation="horizontal"
                            android:padding="10dp">


                            <TextView
                                android:id="@+id/UploadQR"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Scan the QR Code on the nursery cage to select the perfect spot for your newly hatched chicks."

                                android:textColor="@color/appbar"
                                android:textSize="12sp"
                                app:iconTint="@color/black_white"
                                app:icon="@drawable/upload"
                                app:iconGravity="start"
                                app:iconSize="24dp"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.budiyev.android.codescanner.CodeScannerView>

                <!-- Text View to be displayed above the scanner view -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="30dp"
                    android:text="Make sure the QR code is within the frame"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:padding="10dp" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>
