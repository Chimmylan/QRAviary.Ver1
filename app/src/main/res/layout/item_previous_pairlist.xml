<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:layout_marginTop="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black_white"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/maleImageView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/noimage"
                    android:background="@color/itemimagebg"
                    android:contentDescription="Bird Image"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/gendermaleImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="Bird Image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_male_24" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvmaleid"
                            android:layout_width="match_parent"
                            android:textColor="@color/black_white"
                            android:layout_height="wrap_content"
                            android:text="ID" />
                        <TextView
                            android:id="@+id/tvMaleMutation"
                            android:textColor="@color/black_white"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mutation" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/commentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment: "/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="5dp">

                <ImageView
                    android:id="@+id/femaleImageView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/noimage"
                    android:background="@color/itemimagebg"
                    android:contentDescription="Bird Image"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/genderfemaleImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="Bird Image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/female_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvfemaleid"
                            android:layout_width="match_parent"
                            android:textColor="@color/black_white"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="ID" />
                        <TextView
                            android:id="@+id/tvFemaleMutation"
                            android:textColor="@color/black_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mutation" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>